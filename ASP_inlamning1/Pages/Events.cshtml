@page
@model ASP_inlamning1.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

 
<div class="accordion" id="accordionExample">
    @{
        int i = 0;
        @foreach (var item in Model.Event)

        {

            <div class="card">
                <div class="card-header" id="headingOne_@i">
                    <h2 class="mb-0">
                        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne_@i" aria-expanded="true" aria-controls="collapseOne">
                            @Html.DisplayFor(m => item.title)
                        </button>
                    </h2>
                </div>

                <div id="collapseOne_@i" class="collapse" aria-labelledby="headingOne_@i" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                @Html.DisplayFor(m => item.description)
                                @Html.DisplayFor(m => item.organizer_id)
                            </div>
                            <div class="col-6 right-info text-right">
                                <p>Location: @Html.DisplayFor(m => item.place)</p>                                                    
                                <p>Spots: @Html.DisplayFor(m => item.spots_avalible) </p>                                
                                <a asp-page="./Join" asp-route-id="@item.ID" class="btn btn-success join-btn">Join</a>
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }
    }



</div>


    


   






