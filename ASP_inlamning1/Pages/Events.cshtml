@page
@model ASP_inlamning1.Pages.EventsModel

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

 
<div class="accordion" id="accordionExample">
    @{
        int i = 0;
        @foreach (var item in Model.Event)

        {

            <div class="card">
                <div class="card-header" id="headingOne_@i">
                    <h2 class="mb-0">
                        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne_@i" aria-expanded="true" aria-controls="collapseOne">
                            @Html.DisplayFor(m => item.title)
                        </button>
                    </h2>
                </div>

                <div id="collapseOne_@i" class="collapse show" aria-labelledby="headingOne_@i" data-parent="#accordionExample">
                    <div class="card-body">
                        @Html.DisplayFor(m => item.description)
                        <a asp-page="./Join" asp-route-id="@item.ID" class="btn btn-success">Join</a>
                    </div>
                </div>
            </div>
            i++;
        }
    }



</div>


    


   






